{
  "name": "vaste",
  "version": "1.0.0",
  "description": "The World's Easiest and Safest Text Copier.",
  "type": "module",
  "main": "app.js",
  "jest": {
    "testPathIgnorePatterns": [
      "/packages/",
      "<rootDir>/client/"
    ]
  },
  "scripts": {
    "start": "node app",
    "server": "nodemon",
    "client": "npm start --prefix client",
    "test": "concurrently \"jest --watch --verbose\" \"npm run test --prefix client\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erzetid/vaste.git"
  },
  "keywords": [
    "text-copier",
    "copy-text",
    "vaste"
  ],
  "author": "Muhammad Andri Fahrizal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erzetid/vaste/issues"
  },
  "homepage": "https://github.com/erzetid/vaste#readme",
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "nanoid": "^3.1.30",
    "nes-react": "^1.0.2",
    "qrcode": "^1.5.0",
    "react-flexbox-grid": "^2.1.2",
    "socket.io": "^4.4.0"
  },
  "devDependencies": {
    "eslint": "^8.3.0",
    "jest": "^27.3.1",
    "supertest": "^6.1.6"
  }
}
